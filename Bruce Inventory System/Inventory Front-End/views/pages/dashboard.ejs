<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/dash'); %>
</head>

<body>
    <%- include('../partials/header'); %>
    <div class="sidebar">
        <a href="/main">Home</a>
        <a class="active" href="/filter_products">Dashboard</a>
        <a href="/reports">Reports</a>
        <a href="/filter_stockchange">History</a>
        <a href="/logout">Log off</a>
    </div>

    <div class="content">
        <main>
            <div>
                <center>
                    <h2><%= locals.tagline %></h2>
                    <div class="action-buttons">
                        <button onclick="location.href='/filter_products?nfilter=&filter='" class="btn-primary">
                            <i class='bx bx-show'></i> Show All
                        </button>
                        <button id="addProductBtn" class="btn-success">
                            <i class='bx bx-plus-circle'></i> Add Product
                        </button>
                    </div>
                    <form method="GET" action="/filter_products">
                        <label for="nfilter">Filter by Product Name:</label>
                        <input type="text" id="nfilter" name="nfilter" placeholder="Enter Product Name" value="<%= nfilter %>" />
                        <label for="filter">Category:</label>
                        <select name="filter" id="filter">
                            <option value="">All</option>
                            <option value="beverage" <%= filter === 'beverage' ? 'selected' : '' %>>Beverage</option>
                            <option value="snack" <%= filter === 'snack' ? 'selected' : '' %>>Snack</option>
                            <option value="alcohol" <%= filter === 'alcohol' ? 'selected' : '' %>>Alcohol</option>
                            <option value="cigarette" <%= filter === 'cigarette' ? 'selected' : '' %>>Cigarette</option>
                            <option value="other" <%= filter === 'other' ? 'selected' : '' %>>Other</option>
                        </select>
                        <input type="submit" value="Filter" />
                    </form>


                    <div class="dashboard-card">
                        <table class="table-modern">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Category</th>
                                    <th>Stock</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (locals.product && locals.product.length) { %>
                                    <% locals.product.forEach(function(products) { %>
                                        <tr>
                                            <td><%= products.s_name %></td>
                                            <td>
                                                <strong>$<%= products.s_price.toFixed(2) %></strong>
                                            </td>
                                            <td>
                                                <span class="category-tag category-<%= products.s_category.toLowerCase() %>">
                                                    <i class='bx bx-package'></i>
                                                    <%= products.s_category %>
                                                </span>
                                            </td>
                                            <td>
                                                <% if (products.instock === 0) { %>
                                                    <span class="stock-indicator stock-critical">
                                                        <i class='bx bx-x-circle'></i>
                                                        Out of Stock
                                                    </span>
                                                <% } else if (products.instock < 10) { %>
                                                    <span class="stock-indicator stock-warning">
                                                        <i class='bx bx-error'></i>
                                                        Low Stock (<%= products.instock %>)
                                                    </span>
                                                <% } else { %>
                                                    <span class="stock-indicator stock-good">
                                                        <i class='bx bx-check-circle'></i>
                                                        <%= products.instock %> units
                                                    </span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <button class="btn-icon btn-primary" 
                                                    onclick="openUpdateModal('<%= products.s_name %>', <%= products.s_price %>, <%= products.instock %>, '<%= products.s_category %>', <%= products.s_id %>)">
                                                    <i class='bx bx-edit'></i>
                                                    Edit
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="text-center">No products found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </center>
            </div>
        </main>

        <!-- Add Product Modal -->
        <div id="addModal" class="modal">
            <div class="modal-content">
                <span style="text-align: end;" class="close" onclick="closeModal('addModal')">&times;</span>
                <h2>Add New Product</h2>
                <form action="/add_product" method="post">
                    <label for="addName">Product Name:</label>
                    <input type="text" id="addName" name="proname" required><br>
                    <label for="addPrice">Price:</label>
                    <input type="number" id="addPrice" name="proprice" step="0.01" required><br>
                    <label for="addOnhand">On Hand:</label>
                    <input type="number" id="addOnhand" name="prooh" required><br>
                    <label class="form-label" for="addCats">Category:</label>
                    <select name="cats" id="addCats" required>
                        <option value="">Select a category...</option>
                        <option value="Beverage">Beverage</option>
                        <option value="Snack">Snack</option>
                        <option value="Alcohol">Alcohol</option>
                        <option value="Cigarette">Cigarette</option>
                        <option value="Other">Other</option>
                    </select><br>
                    <button type="submit">Create Product</button>
                    <input type="hidden" name="nfilter" value="<%= locals.nfilter %>" />
                    <input type="hidden" name="filter" value="<%= locals.filter %>" />
                </form>
            </div>
        </div>

<!-- Update Product Modal -->
<div id="updateModal" class="modal">
    <div class="modal-content">
        <span style="text-align: end;" class="close" onclick="closeModal('updateModal')">&times;</span>
        <h2>Update Product</h2>
        <form id="updateForm" action="" method="post">
            <label for="updateName">Product Name:</label>
            <input type="text" id="updateName" name="proname" required><br>
            <label for="updatePrice">Price:</label>
            <input type="number" id="updatePrice" name="proprice" step="0.01" required><br>
            <label for="updateOnhand">On Hand:</label>
            <input type="number" id="updateOnhand" name="prooh" required><br>
            <label class="form-label" for="updateCats">Category:</label>
            <select name="cats" id="updateCats" required>
                <option value="">Select a category...</option>
                <option value="Beverage">Beverage</option>
                <option value="Snack">Snack</option>
                <option value="Alcohol">Alcohol</option>
                <option value="Cigarette">Cigarette</option>
                <option value="Other">Other</option>
            </select><br>
            <button type="submit">Update Product</button>
            <button type="button" class="delete-button" onclick="deleteProduct()">Delete Product</button>
            <input type="hidden" name="nfilter" value="<%= locals.nfilter %>" />
            <input type="hidden" name="filter" value="<%= locals.filter %>" />
            <input type="hidden" id="deleteProId" name="s_id" value=""> <!-- Hidden field for s_id -->
        </form>
    </div>
</div>

        <footer>
            <%- include('../partials/footer'); %>
        </footer>
    </div>

    <script>
        // Get modals
        var addModal = document.getElementById("addModal");
        var updateModal = document.getElementById("updateModal");

        // Get buttons
        var addBtn = document.getElementById("addProductBtn");

        // When the user clicks the "Add Product" button, open the add modal
        addBtn.onclick = function() {
            addModal.style.display = "block";
        }

        // Close modal function
        function closeModal(modalId) {
            document.getElementById(modalId).style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function(event) {
            if (event.target == addModal) {
                closeModal('addModal');
            } else if (event.target == updateModal) {
                closeModal('updateModal');
            }
        }

// Function to open the update modal with pre-filled values
function openUpdateModal(name, price, onhand, category, s_id) {
        document.getElementById('updateName').value = name; // Set name
        document.getElementById('updatePrice').value = price; // Set price
        document.getElementById('updateOnhand').value = onhand; // Set on hand
        document.getElementById('updateCats').value = category; // Set category
        document.getElementById('deleteProId').value = s_id; // Set hidden input for s_id

        // Set the form action for updating
        document.getElementById('updateForm').action = `/update_product/${encodeURIComponent(s_id)}`; // Update action URL

        // Show the update modal
        updateModal.style.display = "block";
    }

    // Function to delete the product
    function deleteProduct() {
        const productName = document.getElementById('updateName').value;
        const productid = document.getElementById('deleteProId').value; // Get s_id from hidden input
        const confirmDelete = confirm(`Are you sure you want to delete "${productName}"?`);

        if (confirmDelete) {
            const form = document.getElementById('updateForm');
            form.action = `/delete_product/${encodeURIComponent(productid)}`; // Set the action to delete
            form.submit(); // Submit the form to delete the product
        }
    }

    </script>
</body>
</html>
